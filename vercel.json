{
    "buildCommand": "cd site-build && npm run build",
    "outputDirectory": "site-build/.next",
    "devCommand": "cd site-build && npm run dev", 
    "installCommand": "cd site-build && npm install",
    "framework": "nextjs",
    "regions": [
        "iad1"
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}
